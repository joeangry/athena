# base editorconfig for Athena

root = true

# TypeScript
[{src,scripts}/**.{ts,tsx,json}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[{package.json}]
indent_style = space
indent_size = 4

# Style
[{src,styles}/**.{css,scss}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = space
indent_size = 2